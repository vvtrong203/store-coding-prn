@page
@model Topic3_RazorPages_DBF1.Pages.Admin.DeleteProductModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>
<div>
    <h4>@Model.Product.ProductName</h4>
    <p><strong>Price:</strong> @Model.Product.Price.ToString("C")</p>
    <p><strong>Category:</strong> @Model.Product.Category?.CategoryName</p>
    <p><strong>Stock:</strong> @Model.Product.Stock</p>
</div>

<form method="post">
    <input type="hidden" asp-for="Product.ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Product" class="btn btn-secondary">Cancel</a>
</form>
