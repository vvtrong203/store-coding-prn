@page
@model Topic3_RazorPages_DBF1.Pages.Admin.UpdateProductModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Update Product";
}

<h2>Update Product</h2>

<form method="post">
    <!-- Sử dụng tag helper để tạo hidden field cho ProductId -->
    <input type="hidden" asp-for="Product.ProductId" />

    <div class="form-group">
        <label asp-for="Product.ProductName" class="control-label"></label>
        <input asp-for="Product.ProductName" class="form-control" />
        <span asp-validation-for="Product.ProductName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Price" class="control-label"></label>
        <input asp-for="Product.Price" class="form-control" />
        <span asp-validation-for="Product.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.CategoryId" class="control-label"></label>
        <!-- asp-items sử dụng để tạo danh sách cho dropdown -->
        <select asp-for="Product.CategoryId" class="form-control"
                asp-items="@(new 
    SelectList(Model.Categories, 
        "CategoryId", 
        "CategoryName", 
        Model.Product.CategoryId))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Stock" class="control-label"></label>
        <input asp-for="Product.Stock" class="form-control" />
        <span asp-validation-for="Product.Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <!-- Sử dụng tag helper asp-page để tạo liên kết chuyển hướng -->
        <a asp-page="/Admin/Product" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
