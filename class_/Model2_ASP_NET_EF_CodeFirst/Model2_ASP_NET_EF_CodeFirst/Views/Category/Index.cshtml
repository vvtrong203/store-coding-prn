@model List<Model2_ASP_NET_EF_CodeFirst.Models.Category>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Danh sách danh mục</h1>
<a asp-action="Create" class="btn btn-primary">Thêm danh mục</a>

<table class="styled-table">
    <thead>
    <tr>
        <th>Tên danh mục</th>
        <th>Mô tả</th>
        <th>Thao tác</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var category in Model)
    {
        <tr>
            <td>@category.CategoryName</td>
            <td>@category.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@category.CategoryId" class="btn btn-info">Chi tiết</a>
                <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Chỉnh sửa</a>
                <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>